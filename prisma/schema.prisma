// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./engagemate.db"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  link        String?  // optional product URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  comments    Comment[]
  
  @@map("products")
}

model RedditPost {
  id          String   @id @default(cuid())
  redditId    String   @unique // Reddit post ID
  title       String
  content     String
  author      String   // Reddit username
  subreddit   String   // subreddit name
  url         String   // Reddit post URL
  score       Int      @default(0) // upvotes
  commentCount Int     @default(0) @map("comment_count")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  comments    Comment[]
  
  @@map("reddit_posts")
}

model Comment {
  id          String   @id @default(cuid())
  content     String
  status      String   @default("generated") // generated, posted, failed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  postedAt    DateTime?
  
  postId      String
  post        RedditPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("comments")
}
