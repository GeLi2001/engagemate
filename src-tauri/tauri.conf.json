{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "engagemate",
  "version": "0.1.0",
  "identifier": "com.engagemate.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EngageMate - Reddit Auto-Commenting Tool",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/{{owner}}/{{repo}}/releases/latest/download/latest.json"
    ],
    "dialog": true,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhEQTlBM0ZBMjNGNDJEMkIKUldSWTRKcUhaOGhsMnpobzNkYjJhSzlhVGdZQW1VQ0dqbzFkbVF6QWxUQ1pOQkN4RkMwMUhCeGcK"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
